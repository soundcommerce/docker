#
# NOTE: This Dockerfile is generated.
#
# Do not edit this file directly.
FROM openjdk:8-jdk-alpine

# sbt requires bash and other utils not included
RUN which bash || apk add --no-cache bash bc && \
    which curl >> /dev/null 2>&1 || apk add --no-cache curl

# Install sbt
RUN mkdir -p /usr/share/                                             &&  \
    curl -L https://github.com/sbt/sbt/releases/download/v1.0.3/sbt-1.0.3.tgz | tar xfz - -C /usr/share/ && \
    echo export PATH="/usr/share//sbt/bin:$PATH" >> $HOME/.bashrc   &&  \
    /usr/share//sbt/bin/sbt sbtVersion
